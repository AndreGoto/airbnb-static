<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('../images/<%= flat.place %>'); height: 50vh; background-position: center;"></div>
<div class="container">
  <div class="row">
    <ul class="list-inline">
      <li>
        <%= image_tag flat.owner_picture, class: "img-circle avatar-large" %>
        <p><%= flat.owner_name %></p>
      </li>
      <li>
        <h4><%= flat.summary %></h4>
        <h2><%= flat.description %></h2>
        <p><%= flat.city %></p>
      </li>
    </ul>
  </div>
</div>
